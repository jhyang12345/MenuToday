<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.menutoday" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service android:name=".UpdateService" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver android:name=".WidgetActivity">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="ACTION_AUTO_UPDATE_WIDGET" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.ACTION_WIDGET_CLICK"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.ACTION_WIDGET_CLICK"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK1"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK2"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK3"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK4"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.HEADER_CLICK5"></action>
            </intent-filter>


            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/cafeteriawidget"></meta-data>

        </receiver>

    </application>


</manifest>
