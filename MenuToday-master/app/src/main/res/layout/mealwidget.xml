<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widgetbackground"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/errorMessage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="10dp"
        android:id="@+id/currentTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생식당"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:background="@drawable/widgetbutton"
        android:id="@+id/widgetcafeteria"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@drawable/widgetheader"
        android:layout_alignParentStart="true"
        android:id="@+id/header">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:text="예시"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/headermeal1"
            android:gravity="center_horizontal"

            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:text="예시"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/headermeal2"
            android:gravity="center_horizontal"

            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:text="예시"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/headermeal3"
            android:gravity="center_horizontal"

            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:text="예시"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/headermeal4"
            android:gravity="center_horizontal"

            />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:text="예시"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/headermeal5"
            android:gravity="center_horizontal"

            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@id/widgetcafeteria"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="쌀밥, 소고기무국, 피망잡채, 야채고로케케찹, 오이쑥갓무침, 배추김치"
            android:textAlignment="viewStart"

            android:padding="4dp"
            android:id="@+id/menu1"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="쌀밥, 소고기무국, 피망잡채, 야채고로케케찹, 오이쑥갓무침, 배추김치"
            android:textAlignment="viewStart"

            android:padding="4dp"
            android:id="@+id/menu2"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="쌀밥, 소고기무국, 피망잡채, 야채고로케케찹, 오이쑥갓무침, 배추김치"
            android:textAlignment="viewStart"

            android:padding="4dp"
            android:id="@+id/menu3"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

</RelativeLayout>